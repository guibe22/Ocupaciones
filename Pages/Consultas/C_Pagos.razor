@page "/c_pagos"
@inject PagosBLL PagosBLL;
@inject PagosDetalleBLL PagosDetalleBLL ;

<EditForm Model="lista">
    <DataAnnotationsValidator />

    

    <div class="card">
    <div class="card-header text-center" >
        <h3>Consulta Prestamos</h3>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>PagoID</th>
                    <th>Fecha</th>
                    <th>PersonaID</th>
                    <th>Concepto</th>
                    <th>Monto</th>
                    <th></th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var pago in lista)
                {
                    <tr>
                        <td>@pago.PagosId</td>
                        <td>@pago.Fecha</td>
                        <td>@pago.PersonaId</td>
                        <td>@pago.Concepto</td>
                        <td>@pago.Monto</td>
                        <td><a href="pago/@pago.PagosId">Ver</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

</EditForm>

@code
{
    public string Filtro { get; set; } = "";
    public string Criterio { get; set; } = "";

    public List<Pagos> lista { get; set; } = new List<Pagos>();
    public int PrestamoId{get; set;}
    public void Buscar()
    {
        lista = PagosBLL.GetList(o => true);

        
    }

    protected override void OnInitialized()
    {
        Buscar();
    }

}