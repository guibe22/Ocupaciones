@page "/c_prestamos"
@inject PrestamosBLL PrestamosBLL
@inject NotificationService notificationService

<EditForm Model="lista">
    <DataAnnotationsValidator />
 

    

    <div class="card text-primary">
    <div class="card-header text-center" >
        <h3>Consulta Prestamos</h3>
    </div>
    <div class="card-body">
        <div  class="row">
            <div class="col-3">
                 <label class="form-label">Criterio</label>
                <input type="text" class="form-control" @bind="Criterio">
            </div>
            <div class="col-2">
                <label class="form-label">Filtro</label
                <select class="form-control" @bind="Filtro">
                    <option value="1">PrestamoId</option>
                    <option value="2">Fecha</option>
                    <option value="3">Vence </option>
                    <option value="4">PersonaId</option>
                    <option value="5">Concepto </option>
                    <option value="6">Monto</option>
                    <option value="7">Balance</option>
                    <option value="8">Mostrar todos</option>
                    

                </select>
            </div>
         </div>
         <button type="button" class="btn btn-primary" @onclick="Buscar">
                    <span class="oi oi-magnifying-glass"></span>
         </button>
        <table class="table">
            <thead>
                <tr>
                    <th>PrestamoID</th>
                    <th>Fecha</th>
                    <th>Vence</th>
                    <th>PersonaID</th>
                    <th>Concepto</th>
                    <th>Monto</th>
                    <th>Balance</th>
                    

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prestamo in lista)
                {
                    <tr>
                        <td>@prestamo.PrestamoId</td>
                        <td>@prestamo.Fecha</td>
                        <td>@prestamo.Vence</td>
                        <td>@prestamo.PersonaId</td>
                        <td>@prestamo.Concepto</td>
                        <td>@prestamo.Monto</td>
                        <td>@prestamo.Balance</td>
                        <td><a href="prestamo/@prestamo.PrestamoId">Ver</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

</EditForm>

@code
{
    public string Filtro { get; set; } = "";
    public string Criterio { get; set; } = "";

    public List<Prestamos> lista { get; set; } = new List<Prestamos>();
     public void Buscar()
    {
        switch (Filtro)
        {

            case "1":
                lista = PrestamosBLL.GetList(o => o.PrestamoId.ToString().Contains(Criterio));
                break;

            case "2":
                lista =  PrestamosBLL.GetList(o => o.Fecha.ToString().Contains(Criterio));
                break;

            case "3":
                lista =  PrestamosBLL.GetList(o => o.Vence.ToString().Contains(Criterio));
                break;

            case "4":
                lista = PrestamosBLL.GetList(o => o.PersonaId.ToString().Contains(Criterio));
                break;

            case "5":
                lista = PrestamosBLL.GetList(o => (o.Concepto ?? "").Contains(Criterio));
                break;

            case "6":
                 lista = PrestamosBLL.GetList(o => o.Monto.ToString().Contains(Criterio));
                break;

            case "7":
                 lista = PrestamosBLL.GetList(o => o.Balance.ToString().Contains(Criterio));
                break;
            case "8":
                 lista = PrestamosBLL.GetList(o => true);
                break;

        }

        if (lista.Count == 0)
        {
            ShowNotification(
                 new NotificationMessage
                     {
                         Severity = NotificationSeverity.Warning,
                         Summary = "Criterio no encontrado"
                     });
        }
    }

    protected override void OnInitialized()
    {
         lista = PrestamosBLL.GetList(o => true);
    }

     void ShowNotification(NotificationMessage message)
    {
        notificationService.Notify(message);

    }

}